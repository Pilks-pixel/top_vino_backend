{
  "compilerOptions": {
    "baseUrl": ".",
    "rewriteRelativeImportExtensions": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["dist"],
  "include": ["src/**/*"]
}
